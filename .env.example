# ===========================================
# DELIVR-CM Environment Variables
# ===========================================
# Copy this file to .env and adjust values
# cp .env.example .env

# -------------------------------------------
# Django Settings
# -------------------------------------------
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# -------------------------------------------
# PostgreSQL + PostGIS Database
# -------------------------------------------
DB_NAME=delivr_db
DB_USER=delivr_user
DB_PASSWORD=delivr_secret_2024
DB_HOST=db
DB_PORT=5432

# -------------------------------------------
# Redis (Celery Broker + Cache)
# -------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -------------------------------------------
# OSRM Routing Service (Self-Hosted)
# -------------------------------------------
OSRM_BASE_URL=http://osrm:5000

# -------------------------------------------
# Nominatim Geocoding (Self-Hosted)
# -------------------------------------------
NOMINATIM_BASE_URL=http://nominatim:8080

# -------------------------------------------
# WhatsApp Business API
# -------------------------------------------
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# -------------------------------------------
# Business Rules (Pricing)
# -------------------------------------------
PRICING_BASE_FARE=500
PRICING_COST_PER_KM=150
