# ===========================================
# DELIVR-CM Environment Variables
# ===========================================
# Copy this file to .env and adjust values
# cp .env.example .env

# -------------------------------------------
# Django Settings
# -------------------------------------------
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# -------------------------------------------
# PostgreSQL + PostGIS Database
# -------------------------------------------
DB_NAME=delivr_db
DB_USER=delivr_user
DB_PASSWORD=delivr_secret_2024
DB_HOST=db
DB_PORT=5432

# -------------------------------------------
# Redis (Celery Broker + Cache)
# -------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -------------------------------------------
# OSRM Routing Service (Self-Hosted)
# -------------------------------------------
OSRM_BASE_URL=http://osrm:5000

# -------------------------------------------
# Nominatim Geocoding (Self-Hosted)
# -------------------------------------------
NOMINATIM_BASE_URL=http://nominatim:8080

# -------------------------------------------
# WhatsApp Provider Configuration
# -------------------------------------------
# Toggle between providers: 'twilio' or 'meta'
ACTIVE_WHATSAPP_PROVIDER=twilio

# -------------------------------------------
# Meta WhatsApp Cloud API
# -------------------------------------------
# Get these from: https://developers.facebook.com/apps/
META_API_URL=https://graph.facebook.com/v17.0
META_API_TOKEN=EAAxxxxxxxxxxxxxxxxxxxxxxxx
META_PHONE_NUMBER_ID=1234567890123456
META_VERIFY_TOKEN=delivr-cm-webhook-verify-token

# -------------------------------------------
# Twilio WhatsApp Integration
# -------------------------------------------
# Get these from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Twilio Sandbox number (for testing) or your purchased number
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# -------------------------------------------
# Business Rules (Pricing)
# -------------------------------------------
PRICING_BASE_FARE=500
PRICING_COST_PER_KM=150
PRICING_MINIMUM_FARE=1000
PLATFORM_FEE_PERCENT=20
COURIER_DEBT_CEILING=2500
